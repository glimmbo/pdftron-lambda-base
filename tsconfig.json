{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es2018"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "/opt/*": ["../common/*"]
    }
  },
  "include": ["index.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
